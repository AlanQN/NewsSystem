<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text_size" format="dimension" />

    <declare-styleable name="SearchView">
        <attr name="search_icon" format="reference|integer" />
        <attr name="query_hint" format="string" />
        <attr name="text" format="string" />
        <attr name="text_size" />
        <attr name="editable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="background_color" format="color" />
        <attr name="left_icon" format="reference|integer" />
        <attr name="left_text" format="string" />
        <attr name="left_text_color" format="color" />
        <attr name="left_visible" format="boolean" />
        <attr name="title_text" format="string" />
        <attr name="title_text_color" format="color" />
        <attr name="title_icon" format="reference|integer" />
        <attr name="right_text" format="string" />
        <attr name="right_text_color" format="color" />
        <attr name="right_icon" format="reference|integer" />
        <attr name="right_visible" format="boolean" />
    </declare-styleable>

    <attr name="tab_visible_count" format="integer" />
    <attr name="indicator_color" format="color" />
    <attr name="indicator_height" format="integer" />
    <attr name="text_normal_color" format="color" />
    <attr name="text_light_color" format="color" />

    <declare-styleable name="ViewPagerIndicator">
        <attr name="tab_visible_count" />
        <attr name="indicator_color" />
        <attr name="indicator_height" />
        <attr name="text_normal_color" />
        <attr name="text_light_color" />
        <attr name="text_size" />
    </declare-styleable>

    <declare-styleable name="MyViewPager">
        <attr name="tab_visible_count" />
        <attr name="indicator_color" />
        <attr name="text_normal_color" />
        <attr name="text_light_color" />
        <attr name="text_size" />
        <attr name="indicator_background_color" format="color" />
        <attr name="indicator_background" format="reference|integer" />
    </declare-styleable>

</resources>